<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Portal</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    />
  <link rel="stylesheet" type="text/css" href="/styles/dashboard.css" />
  <link rel="stylesheet" type="text/css" href="/styles/main.css" />


</head>
<body>
  <div class="container">

    <aside>
      
      <div class="top">
        <div class="logo">
          <img src="../images/logo.png"/>
          <h2>Portal</h2>
        </div>
        <div class="close" id="close-btn">
          <i class="fa-solid fa-xmark"></i>
        </div>
      </div>
        <div class="sidebar">

          <a href="/profile" class="active">
              <i class="fa-solid fa-user"></i>
            <h3>Profile</h3>
          </a>
          
          <a href="/dashboard">
            <i class="fa-solid fa-grip-vertical"></i>
            <h3>Dashboard</h3>
          </a>

          <a href="/team" >
              <i class="fa-solid fa-people-group"></i>
            <h3>Team</h3>
          </a>

          <a href="tasks">
            <i class="fa-regular fa-clipboard"></i>
            <h3>Tasks</h3>
          </a>

          <a href="/analytics">
            <i class="fa-solid fa-chart-line"></i>
            <h3>Analytics</h3>
          </a>

          <a href="/messages">
            <i class="fa-solid fa-comment"></i>
            <h3>Messages</h3>
            <span class="message-count">26</span>
          </a>

          

          <a href="/login">
            <i class="fa-solid fa-arrow-right-from-bracket"></i>
            <h3>Logout</h3>
          </a>
      </div>
    </aside>

    <main>
      <div class="wrapper">
      
          <h1>User Profile</h1>
          <div>
            <p>
              <strong>Name:</strong> <%= name %>
            </p>
            <p>
              <strong>Email:</strong> <%= email %>
            </p>
            <p>
              <strong>Birthday:</strong> <%= birthday ? birthday.toISOString().split('T')[0] : 'N/A' %>
            </p>
            <p>
              <strong>Job Title:</strong> <%= jobTitle || 'N/A' %>
            </p>
            <p>
              <strong>Department:</strong> <%= department || 'N/A' %>
            </p>
          </div>

        
      </div>
    </main>
  </div>
    
  <!-- Update button to initiate profile update -->
  <a href="/profile/update">Update Profile</a>
</body>
