<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Portal</title>
 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer" />
    
  <link rel="stylesheet" type="text/css" href="/styles/dashboard.css" />

</head>


<body>

  <div class="container">
    <aside>
      
      <div class="top">
        <div class="logo">
          <img src="../images/portal-logo.png"/>
          <h2>Portal</h2>
        </div>
        <div class="close" id="close-btn">
          <i class="fa-solid fa-xmark"></i>
        </div>
      </div>
      
        <div class="sidebar">

          <a href="/profile">
            <i class="fa-solid fa-user"></i>
            <h3>Profile</h3>
          </a>

          <a href="/dashboard" class="active">
            <i class="fa-solid fa-grip-vertical"></i>
            <h3>Dashboard</h3>
          </a>

          <a href="/team">
            <i class="fa-solid fa-people-group"></i>
            <h3>Team</h3>
          </a>

          <a href="/tasks">
            <i class="fa-regular fa-clipboard"></i>
            <h3>Tasks</h3>
          </a>

          <a href="/analytics">
            <i class="fa-solid fa-chart-line"></i>
            <h3>Analytics</h3>
          </a>

          <a href="/messages">
            <i class="fa-solid fa-comment"></i>
            <h3>Messages</h3>
           <span class="message-count">26</span>
          </a>

          <a href="/login">
            <i class="fa-solid fa-arrow-right-from-bracket"></i>
            <h3>Logout</h3>
          </a>
      </div>
    </aside>

    <main>

      <h1>Dashboard</h1>

      <div class="date">
        <input type="date"/>
      </div>

      <div class="insights">
        
        <!-- Sales -->
        
        <div class="sales">
          <i class="fa-solid fa-magnifying-glass-chart"></i>
          <div class="middle">
            <div class="left">
              <h3>Total sales</h3>
              <h1>$25,024</h1>
            </div>
            <div class="progress">
              <svg>
                <circle cx='38' cy='38' r='36'></circle>
              </svg>
              <div class="number">
                <p>81%</p>
              </div> 
            </div>   
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
        
        <!-- expenses -->
        
        <div class="expenses">
          <i class="fa-solid fa-chart-simple"></i>
          <div class="middle">
            <div class="left">
              <h3>Total expenses</h3>
              <h1>$14,160</h1>
            </div>
            <div class="progress">
              <svg>
                <circle cx='38' cy='38' r='36'></circle>
              </svg>
              <div class="number">
                <p>62%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
        
        <!-- income -->
        
        <div class="income">
          <i class="fa-solid fa-chart-pie"></i>
          <div class="middle">
            <div class="left">
              <h3>Total income</h3>
              <h1>$10,864</h1>
            </div>
            <div class="progress">
              <svg>
                <circle cx='38' cy='38' r='36'></circle>
              </svg>
              <div class="number">
                <p>44%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
      </div>

      <!-- recent orders -->
      <div class="recent-orders">
        <h2>Recent Orders</h2>
        <table>
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Product Number</th>
              <th>Payment</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            
            <tr>
              <td>iPhone 11</td>
              <td>79398</td>
              <td>Due</td>
              <td class="warning">Pending</td>
              <td class="primary">Details</td>
            </tr>

            <tr>
              <td>iPhone 11</td>
              <td>79398</td>
              <td>Due</td>
              <td class="success">Done</td>
              <td class="primary">Details</td>
            </tr>

            <tr>
              <td>iPhone 11</td>
              <td>79398</td>
              <td>Due</td>
              <td class="warning">Pending</td>
              <td class="primary">Details</td>
            </tr>
            
            
          </tbody>
        </table>
        <a href='#'>Show All</a>
      </div>
      
    </main>
    
    <!-- right side -->
    <div class="right">

      <!-- top -->
      <div class="top">
        
        <button id="menu-btn">
          <i class="fa-solid fa-bars"></i>
        </button>

        <div class="theme-toggler">
          <i class="fa-regular fa-sun active"></i>
          <i class="fa-regular fa-moon"></i>
        </div>

        <div class="profile">
          <div class="info">
            
            <small class="text-muted"></small>
          </div>

          <div class="profile-photo">
            <a href="/profile">
              <img src="../images/pfp.jfif" alt="Profile photo"/>
            </a>
         </div>
        </div>
        
      </div>

      <!-- recent-updates -->

      <div class="recent-updates">
        <h2>Recent Updates</h2>
        <div class="updates">
          
          <div class="update">
            <div class="profile-photo">
              <img src="../images/profile-photo-1.jfif"/>
            </div>
            <div class="message">
              <p><b>Alysa Holmes</b> finished an assignment</p>
              <small class="text-muted">2 minutes ago</small>
            </div>
          </div>

          <div class="update">
            <div class="profile-photo">
              <img src="../images/profile-photo-2.jfif"/>
            </div>
            <div class="message">
              <p>
                <b>James Austen</b> updates documents
              </p>
              <small class="text-muted">4 minutes ago</small>
            </div>
          </div>

          <div class="update">
            <div class="profile-photo">
              <img src="../images/profile-photo-3.jfif"/>
            </div>
            <div class="message">
              <p>
                <b>MJ Collins</b> sumbitted project design
              </p>
              <small class="text-muted">5 minutes ago</small>
            </div>
          </div>
          
        </div>
      </div>

      <div class="sales-analytics">
        <h2>Sales Analytics</h2>
        <div class="item online">
          <div class="icon">
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
          <div class="right">
            <div class="info">
              <h3>ONLINE ORDERS</h3>
              <small class="text-muted">Last 24 hours</small>
            </div>
            <h5 class="success">+39%</h5>
            <h3>3849</h3>
          </div>
        </div>

        <div class="item offline">
          <div class="icon">
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
          <div class="right">
            <div class="info">
              <h3>OFFLINE ORDERS</h3>
              <small class="text-muted">Last 24 hours</small>
            </div>
            <h5 class="danger">-17%</h5>
            <h3>1100</h3>
          </div>
        </div>

        <div class="item customers">
          <div class="icon">
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
          <div class="right">
            <div class="info">
              <h3>NEW CUSTOMERS</h3>
              <small class="text-muted">Last 24 hours</small>
            </div>
            <h5 class="success">+25%</h5>
            <h3>849</h3>
          </div>
        </div>

        <div class="item add-product">
          <div>
            <i class="fa-solid fa-plus"></i>
            <h3>Add Product</h3>
          </div>
        </div>
        
        
      </div>
      
      
    </div>
    
    
    
    
  </div>

  <!--toggle button functionality-->
  <script src="../scripts/dashboard.js"></script>
  
</body>